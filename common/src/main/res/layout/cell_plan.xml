<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_margin="@dimen/len_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvRcommended"
                android:background="#FF6464"
                android:textColor="@color/white"
                android:text="强烈推荐"
                android:gravity="center"
                android:textSize="11sp"
                android:layout_marginLeft="-2dp"
                android:layout_width="55dp"
                android:layout_height="18dp"/>


                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_marginTop="@dimen/len_20"
                    android:text="方案一：劳动法第8条"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/len_16"
                    android:layout_marginTop="@dimen/len_20"
                    android:layout_marginBottom="@dimen/len_20"
                    android:text="适用于所有该争议类型的处理"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_14" />

                <Button
                    android:id="@+id/btn_look"
                    android:layout_width="@dimen/len_56"
                    android:layout_height="@dimen/font_24"
                    android:layout_marginRight="@dimen/len_20"
                    android:layout_gravity="end|bottom"
                    android:layout_marginBottom="@dimen/len_20"
                    android:background="#007AF0"
                    android:text="查看"
                    android:textColor="@color/white"

                    />
            </FrameLayout>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
