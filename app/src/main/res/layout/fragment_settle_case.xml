<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".flags.law.controversy.SettleCasesFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_28"
        android:background="@color/white" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_56"
        android:layout_marginTop="@dimen/len_10"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/len_2"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/len_4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chevron_left_black" />

        <TextView
            android:id="@+id/tv_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/len_8"
            android:text="解决劳动案件"
            android:textColor="#111111"
            android:textSize="@dimen/font_18" />
    </FrameLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/len_100"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout

            android:layout_marginLeft="@dimen/font_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/len_8">

            <TextView
                android:id="@+id/select_cases_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="请选择案件信息"
                android:textColor="#B2BACB"
                android:textSize="@dimen/font_16" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_chevron_right_black_24dp" />

            <View
                android:background="#DDDDDD"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </FrameLayout>


        <FrameLayout
            android:layout_marginTop="@dimen/len_20"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/len_8">

            <TextView
                android:id="@+id/select_cases_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="请选择案件类型"
                android:textColor="#B2BACB"
                android:textSize="@dimen/font_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_chevron_right_black_24dp" />
            <View
                android:background="#DDDDDD"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/len_20"
            android:layout_marginLeft="@dimen/font_10"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/len_8">
            <TextView
                android:id="@+id/select_cases_program"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="请选择案件程序"
                android:textColor="#B2BACB"
                android:textSize="@dimen/font_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_chevron_right_black_24dp" />
            <View
                android:background="#DDDDDD"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/len_100">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_submit"
            android:layout_width="290dp"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center"
            android:background="@drawable/sel_btn_bg_black_alpha_44"
            android:enabled="false"
            android:outlineProvider="background"
            android:text="@string/commit"
            android:elevation="@dimen/len_4"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            app:gTouchColor="@color/white_alpha_48"
            app:gTouchCornerRadius="22dp"
            app:gTouchEffect="ripple" />

        <net.qiujuer.genius.ui.widget.Loading
            android:id="@+id/loading"
            android:layout_width="@dimen/len_36"
            android:layout_height="@dimen/len_36"
            android:layout_gravity="center"
            app:gAutoRun="false"
            app:gBackgroundColor="@color/trans"
            app:gForegroundColor="@color/white"
            app:gForegroundLineSize="1dp" />
    </FrameLayout>

</FrameLayout>