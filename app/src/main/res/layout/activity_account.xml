<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".activities.AccountActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_56"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/len_2"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/len_4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chevron_left_black" />

        <TextView
            android:id="@+id/tv_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/len_8"
            android:text="@string/by_pwd_login"
            android:textColor="#111111"
            android:textSize="@dimen/font_18" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/account_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/len_56"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bg_login"
            android:layout_width="@dimen/len_80"
            android:layout_height="@dimen/len_80"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/len_172"
            android:contentDescription="@string/app_name"
            android:elevation="@dimen/len_8"
            android:outlineProvider="paddedBounds"
            android:src="@drawable/bg_photo" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_128"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/len_44"
            android:layout_marginEnd="@dimen/len_44"
            android:layout_marginBottom="@dimen/len_20"
            android:background="@drawable/common_shap">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_52"
                android:layout_margin="@dimen/len_12"
                android:background="@null"
                android:hint="@string/input_phone"
                android:autofillHints="@string/input_phone"
                android:inputType="phone"
                android:textColor="@color/black"
                android:padding="@dimen/len_14"
                android:textColorHint="#B0B0B0"
                android:textSize="@dimen/font_14"
                tools:ignore="UnusedAttribute" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_52"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/len_12"
                android:background="@null"
                android:hint="@string/input_pwd"
                android:autofillHints="@string/input_pwd"
                android:inputType="textPassword"
                android:padding="@dimen/len_14"
                android:textColorHint="#B0B0B0"
                android:textSize="@dimen/font_14"
                android:textColor="@color/black"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/len_28"
                android:scaleType="centerInside"
                android:src="@drawable/ic_off" />

        </FrameLayout>

        <Button
            android:layout_width="290dp"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_100"
            android:background="@drawable/btn_login_shap"
            android:text="@string/login" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_156"
            android:layout_marginEnd="@dimen/len_56">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_margin="@dimen/len_6"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_weixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/len_36"
                android:text="@string/weixin_login"
                android:textColor="#808080" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/len_56"
            android:layout_marginTop="@dimen/len_156">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_margin="@dimen/len_6"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="@dimen/len_36"
                android:text="@string/message_login"
                android:textColor="#808080" />
        </FrameLayout>


    </FrameLayout>


</FrameLayout>