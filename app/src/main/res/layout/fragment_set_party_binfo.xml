<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".flags.contract.custom.SetPartyBInfoFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_224"
        app:elevation="0dp"
        tools:targetApi="lollipop">

        <FrameLayout
            android:layout_marginTop="@dimen/len_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_56"
            android:background="@color/trans"
            android:gravity="center">

            <ImageView
                android:id="@+id/im_back"
                android:layout_width="@dimen/len_40"
                android:layout_height="@dimen/len_40"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/len_8"
                android:contentDescription="@string/app_name"
                android:padding="@dimen/len_6"
                android:tint="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/ic_chevron_left_black" />

            <TextView
                android:id="@+id/tv_account_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/len_8"
                android:text="定制合同"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18" />
        </FrameLayout>


        <TextView
            android:layout_marginStart="@dimen/len_20"
            android:layout_marginTop="@dimen/len_36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_24"
            android:textColor="@color/white"
            android:text="请填写已方信息"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginTop="@dimen/len_156"
        android:layout_height="wrap_content"
        android:background="@drawable/common_shap"
        android:baselineAligned="false"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom"
        tools:targetApi="LOLLIPOP">

        <!--   /**
            * name : 乙方（劳动者）
            * idNumber : 证件号
            * householdRegister : 户籍地址
            * residentialAddress : 现居住地
            * contactNumber : 联系电话
            */-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

           <!--姓名-->
            <FrameLayout
                android:layout_marginTop="@dimen/len_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/len_14"
                        android:layout_gravity="center_vertical"
                        android:textColor="#001C54"
                        android:textSize="@dimen/font_14"
                        android:text="姓名："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/et_name"
                        android:textSize="@dimen/font_14"
                        android:padding="@dimen/len_14"
                        android:layout_marginStart="@dimen/len_8"
                        android:layout_width="match_parent"
                        android:hint="请输入姓名"
                        android:textColorHint="#C1C8D5"
                        android:background="@null"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#DDDDDD"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </FrameLayout>

            <!--身份证号-->
            <FrameLayout
                android:layout_marginTop="@dimen/len_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/len_14"
                        android:layout_gravity="center_vertical"
                        android:textColor="#001C54"
                        android:textSize="@dimen/font_14"
                        android:text="身份证号码："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/et_number_id"
                        android:textSize="@dimen/font_14"
                        android:padding="@dimen/len_14"
                        android:layout_marginStart="@dimen/len_8"
                        android:layout_width="match_parent"
                        android:hint="请输入身份证号码"
                        android:textColorHint="#C1C8D5"
                        android:background="@null"

                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#DDDDDD"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </FrameLayout>

            <!--户籍地址-->
            <FrameLayout
                android:layout_marginTop="@dimen/len_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/len_14"
                        android:layout_gravity="center_vertical"
                        android:textColor="#001C54"
                        android:textSize="@dimen/font_14"
                        android:text="户籍地址："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    l
                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/et_household_registration"
                        android:textSize="@dimen/font_14"
                        android:padding="@dimen/len_14"
                        android:layout_marginStart="@dimen/len_8"
                        android:layout_width="match_parent"
                        android:hint="请输入户籍所在地"
                        android:textColorHint="#C1C8D5"
                        android:background="@null"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:background="#DDDDDD"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </FrameLayout>

            <!--现居住地-->
            <FrameLayout
                android:layout_marginTop="@dimen/len_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/len_14"
                        android:layout_gravity="center_vertical"
                        android:textColor="#001C54"
                        android:textSize="@dimen/font_14"
                        android:text="现居地址："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/et_address"
                        android:textSize="@dimen/font_14"
                        android:padding="@dimen/len_14"
                        android:layout_marginStart="@dimen/len_8"
                        android:layout_width="match_parent"
                        android:hint="请输入现在居住的地址"
                        android:textColorHint="#C1C8D5"
                        android:background="@null"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:background="#DDDDDD"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </FrameLayout>

            <!--联系电话-->
            <FrameLayout
                android:layout_marginTop="@dimen/len_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/len_14"
                        android:layout_gravity="center_vertical"
                        android:textColor="#001C54"
                        android:textSize="@dimen/font_14"
                        android:text="联系电话："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:textColor="@color/black"
                        android:id="@+id/et_contract_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/len_8"
                        android:background="@null"
                        android:hint="请输入联系方式"
                        android:padding="@dimen/len_14"
                        android:textColorHint="#C1C8D5"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <View
                    android:background="#DDDDDD"
                    android:layout_marginStart="@dimen/len_14"
                    android:layout_marginEnd="@dimen/len_14"
                    android:layout_gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </FrameLayout>

            <LinearLayout
                android:padding="@dimen/len_14"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/len_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_previous"
                    android:layout_margin="@dimen/len_8"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_18"
                    android:text="上一步"
                    android:textColor="#007AF0"
                    android:background="@drawable/btn_shape"
                    android:layout_width="142dp"
                    android:layout_height="50dp"/>
                <Button
                    android:id="@+id/btn_next"
                    android:textSize="@dimen/font_18"
                    android:layout_weight="1"
                    android:text="下一步"
                    android:layout_margin="@dimen/len_8"
                    android:background="@drawable/btn_shape_"
                    android:layout_width="142dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

        </LinearLayout>




    </FrameLayout>

</FrameLayout>