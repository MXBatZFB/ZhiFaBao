<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flags.account.LoginFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_56"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/len_2"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/len_4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chevron_left_black" />

        <TextView
            android:id="@+id/tv_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/len_8"
            android:text="@string/by_msg_login"
            android:textColor="#111111"
            android:textSize="@dimen/font_18" />
    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bg_msglogin"
        android:layout_width="@dimen/len_80"
        android:layout_height="@dimen/len_80"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/len_172"
        android:contentDescription="@string/app_name"
        android:elevation="@dimen/len_8"
        android:outlineProvider="paddedBounds"
        android:src="@drawable/bg_photo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_128"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/len_44"
        android:layout_marginEnd="@dimen/len_44"
        android:layout_marginBottom="@dimen/len_20"
        android:background="@drawable/common_shap">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_52"
            android:layout_margin="@dimen/len_12"
            android:background="@null"
            android:hint="@string/input_phone"
            android:autofillHints="@string/input_phone"
            android:inputType="phone"
            android:textColor="@color/black"
            android:padding="@dimen/len_14"
            android:textColorHint="#B0B0B0"
            android:textSize="@dimen/font_14"
            tools:ignore="UnusedAttribute" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/len_52"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/len_12"
            android:background="@null"
            android:hint="@string/input_code"
            android:autofillHints="@string/input_code"
            android:inputType="number"
            android:padding="@dimen/len_14"
            android:textColorHint="#B0B0B0"
            android:textSize="@dimen/font_14"
            android:textColor="@color/black"
            tools:ignore="UnusedAttribute" />

        <Button
            android:id="@+id/btn_get_code"
            android:contentDescription="@string/app_name"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom|end"
            android:text="@string/get_code"
            android:gravity="center"
            android:background="@drawable/code_shape"
            android:textSize="@dimen/font_14"
            android:textColor="#218FFF"
            android:layout_margin="@dimen/len_28"
            android:scaleType="centerInside"
             />
    </FrameLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/len_88">


        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_submit"
            android:layout_width="290dp"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center"
            android:background="@drawable/sel_btn_bg_black_alpha_44"
            android:text="@string/login_or_register"
            android:textColor="@color/white"
            app:gTouchColor="@color/white_alpha_48"
            app:gTouchCornerRadius="22dp"
            app:gTouchEffect="ripple" />


        <net.qiujuer.genius.ui.widget.Loading
            android:id="@+id/loading"
            android:layout_width="@dimen/len_36"
            android:layout_height="@dimen/len_36"
            android:layout_gravity="center"
            app:gAutoRun="false"
            app:gBackgroundColor="@color/trans"
            app:gForegroundColor="@color/white"
            app:gForegroundLineSize="1dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_by_weiixn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/len_172"
        android:layout_marginEnd="@dimen/len_56">

        <ImageView
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="@dimen/len_6"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="@dimen/len_36"
            android:text="@string/by_weixin_login"
            android:textColor="#808080" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_by_pwd_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/len_56"
        android:layout_marginTop="@dimen/len_172">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="@dimen/len_6"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_luck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="@dimen/len_36"
            android:text="@string/by_pwd_login"
            android:textColor="#808080" />
    </FrameLayout>


</FrameLayout>
