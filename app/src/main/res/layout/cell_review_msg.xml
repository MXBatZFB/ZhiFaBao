<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/len_24"
    android:layout_marginEnd="@dimen/len_24"
    android:layout_marginTop="@dimen/len_20"
    android:background="@drawable/dialog_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTitle"
            android:text="劳动合同审核已完成"
            android:textSize="@dimen/font_16"
            android:layout_weight="4"
            android:textColor="#111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/len_10"/>

        <TextView
            android:id="@+id/tvTime"
           android:layout_weight="1"
            android:textSize="@dimen/font_12"
            android:textColor="#AAAAAA"
            android:text="2019-09-12"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/len_10"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvContent"
        android:layout_weight="1"
        android:textSize="@dimen/font_14"
        android:textColor="#666666"
        android:text="亲，你的“劳动合同 01”已通过审核，请查看哦。"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/len_10"/>
    <View
        android:background="#DDDDDD"
        android:layout_margin="@dimen/len_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <FrameLayout
        android:id="@+id/fl_find"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/font_14"
            android:textColor="#666666"
            android:text="点击查看"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/len_10"/>

        <ImageView
            android:layout_margin="@dimen/len_10"
            android:layout_gravity="end"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </FrameLayout>

</LinearLayout>