<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flags.law.ConsultationFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_56"
        android:layout_marginTop="@dimen/len_28"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/len_2"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/len_4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chevron_left_black" />

        <TextView
            android:id="@+id/tv_account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/len_8"
            android:text="劳动法咨询"
            android:textColor="#111111"
            android:textSize="@dimen/font_18" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_84"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/len_28">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_28"
            android:layout_marginEnd="18dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当地劳动法"
                android:textColor="#001C54"
                android:textSize="@dimen/font_20" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:padding="@dimen/len_8">

                <TextView
                    android:id="@+id/select_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/len_84"
                    android:gravity="center"

                    android:text="请选择城市"
                    android:textColor="#B2BACB" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:background="@drawable/x_shape"
                    android:text="查询" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/len_8"
                android:background="#DDDDDD" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_28"
            android:layout_marginTop="@dimen/len_16"
            android:layout_marginEnd="18dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关案例"
                android:textColor="#001C54"
                android:textSize="@dimen/font_20" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:padding="@dimen/len_8">

                <TextView
                    android:id="@+id/select_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/len_84"
                    android:gravity="center"
                    android:text="请选择争议类型"
                    android:textColor="#B2BACB" />

                <Button
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:background="@drawable/x_shape"
                    android:text="查询" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/len_8"
                android:background="#DDDDDD" />
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/len_56"
        android:background="@color/white"
        android:padding="@dimen/len_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/len_28"
            android:gravity="center"
            android:text="法律流程模板"
            android:textColor="#001C54"
            android:textSize="@dimen/len_16" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </FrameLayout>


</FrameLayout>