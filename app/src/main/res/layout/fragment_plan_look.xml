<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".flags.law.controversy.LookPlanFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_56"
        android:layout_marginTop="@dimen/len_8"
        android:background="@color/white"
        android:gravity="center">

        <ImageView
            android:id="@+id/im_back"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/len_2"
            android:contentDescription="第一方案"
            android:padding="@dimen/len_4"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_chevron_left_black" />

        <TextView
            android:id="@+id/tvTile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/len_8"
            android:text="第一方案"
            android:textColor="#111111"
            android:textSize="@dimen/font_18" />
    </FrameLayout>

    <com.zfb.zhifabao.common.widget.app.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_60"
        android:layout_marginEnd="@dimen/len_12"
        android:scrollbarSize="@dimen/len_8"
        android:layout_marginBottom="@dimen/len_116"
        android:scrollbarThumbVertical="@color/trans"
        android:scrollbars="vertical">
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/len_28">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/len_20"
            android:layout_marginEnd="18dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#007AF0"
                    android:layout_width="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/len_20"/>

                <TextView
                    android:id="@+id/tv_plan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/len_28"
                    android:text="劳动法第八条"
                    android:textColor="#001C54"
                    android:textSize="@dimen/font_20" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:padding="@dimen/len_8">

                <TextView
                    android:id="@+id/tv_plan_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/len_28"
                    android:layout_marginEnd="@dimen/len_28"
                    android:textColor="#666666" />
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_16"
            android:layout_marginEnd="18dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_marginStart="@dimen/len_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="#007AF0"
            android:layout_width="5dp"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/len_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/len_28"
            android:text="律师建议"
            android:textColor="#001C54"
            android:textSize="@dimen/font_20" />
    </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_16"
            android:padding="@dimen/len_8">

            <TextView
                android:id="@+id/tv_lawyers_suggested"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/len_28"
                android:layout_marginEnd="@dimen/len_28"
                android:textColor="#666666" />
        </FrameLayout>
    </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_16"
            android:layout_marginEnd="18dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:background="#007AF0"
                    android:layout_width="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/len_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/len_28"
                    android:text="案列分析"
                    android:textColor="#001C54"
                    android:textSize="@dimen/font_20" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_16"
                android:padding="@dimen/len_8">
c_c

                <TextView
                    android:layout_marginTop="@dimen/len_2"
                    android:id="@+id/tv_case_analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/len_28"
                    android:layout_marginEnd="@dimen/len_28"
                    android:layout_marginBottom="@dimen/len_10"
                    android:textColor="#666666" />
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>
      </FrameLayout>
    </com.zfb.zhifabao.common.widget.app.ObservableScrollView>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/len_36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_marginStart="@dimen/len_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/len_16">

            <View
                android:layout_width="5dp"
                android:layout_height="@dimen/len_20"
                android:layout_gravity="center_vertical"
                android:background="#007AF0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_28"
                android:text="文本模板"
                android:textColor="#001C54"
                android:textSize="@dimen/font_20" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
           >

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/btn_submit"
                android:layout_width="290dp"
                android:layout_height="@dimen/len_40"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/sel_btn_bg_black_alpha_44"
                android:enabled="true"
                android:outlineProvider="background"
                android:text="查看/导出模板列表"
                android:elevation="@dimen/len_4"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"
                app:gTouchColor="@color/white_alpha_48"
                app:gTouchCornerRadius="22dp"
                app:gTouchEffect="ripple" />

            <net.qiujuer.genius.ui.widget.Loading
                android:id="@+id/loading"
                android:layout_width="@dimen/len_36"
                android:layout_height="@dimen/len_36"
                android:layout_gravity="center"
                app:gAutoRun="false"
                app:gBackgroundColor="@color/trans"
                app:gForegroundColor="@color/white"
                app:gForegroundLineSize="1dp" />
        </FrameLayout>

    </LinearLayout>
</FrameLayout>